<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/front_whole_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:id="@+id/tag_title_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/profile_photo_rounded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="heemeebird"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tag_main_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/tag_title_whole"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/kkonge6" />

        <RelativeLayout
            android:id="@+id/favorite_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_main_img">

            <LinearLayout
                android:id="@+id/favorite_cnt_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_follow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/favorite_cnt_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_comment_front"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/kakao_login_symbol" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="500" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/main_flip_review_text"
            android:layout_below="@+id/favorite_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리뷰를 써볼까요 뉸뉴냔냐"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/main_flip_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_flip_review_text"
            android:text="2018년 10월 5일"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="13dp"
            />
    </RelativeLayout>
</LinearLayout>

